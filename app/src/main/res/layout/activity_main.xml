<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    android:id="@+id/parent"
    android:background="#f5f5f5"
    tools:context="com.example.user.bananacamel.MainActivity">

    <TextView
        android:textSize="18sp"
        android:textColor="#1a56d9"
        android:id="@+id/txt_instruction"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill in the spaces below"/>

    <TextView
        android:textColor="#1a56d9"
        android:textSize="25sp"
        android:textStyle="bold"
        android:id="@+id/txt_output"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout

        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:textColor="#1a56d9"
            android:background="#dedddd"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="X"/>

        <EditText
            android:textColorHint="#FF81A7FC"
            android:padding="4dp"
            android:background="#fff"
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/ed_total_banana"
            android:layout_margin="4dp"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:hint="total no. of banana"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:textColor="#1a56d9"
            android:background="#dedddd"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="Y"/>

        <EditText
            android:textColorHint="#FF81A7FC"
            android:padding="4dp"
            android:background="#fff"
            android:maxLength="5"
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/ed_distance"
            android:layout_margin="4dp"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:hint="total distance"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:textColor="#1a56d9"
            android:background="#dedddd"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="Z"/>

        <EditText
            android:textColorHint="#FF81A7FC"
            android:id="@+id/ed_no_camel"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:background="#fff"
            android:hint=" number of camel"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1"
            android:padding="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:textColor="#1a56d9"
            android:background="#dedddd"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="K"/>

        <EditText
            android:textColorHint="#FF81A7FC"
            android:padding="4dp"
            android:background="#fff"
            android:maxLength="2"
            android:inputType="number"
            android:maxLines="1"
            android:id="@+id/ed_eats_per_km"
            android:layout_margin="4dp"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:hint="banana eats per km"/>

    </LinearLayout>


    <Button
        android:textColor="#fff"
        android:background="@drawable/button_back"
        android:id="@+id/calculate"
        android:layout_marginTop="16dp"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Calculate"/>



</LinearLayout>
